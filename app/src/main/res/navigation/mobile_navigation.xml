<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/destination_movie">

    <fragment
        android:id="@+id/destination_movie"
        android:name="hoannt.android.moviedb.ui.list.MovieListFragment"
        android:label="fragment_movie_list"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/navToItemDetailFragment"
            app:destination="@id/movieDetailFragment" />
        <action
            android:id="@+id/action_destination_movie_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="hoannt.android.moviedb.ui.detail.MovieDetailFragment"
        android:label="fragment_movie_detail"
        tools:layout="@layout/fragment_movie_detail">
        <action
            android:id="@+id/action_movieDetailFragment"
            app:popUpTo="@+id/destination_movie" />

        <argument
            android:name="uri"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/destination_tv"
        android:name="hoannt.android.moviedb.ui.TVListFragment"
        android:label="fragment_t_v_list"
        tools:layout="@layout/fragment_t_v_list" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="hoannt.android.moviedb.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
</navigation>